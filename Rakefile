# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/libnet/version.rb'

Hoe.new('pcap-ffi', FFI::Libnet::VERSION) do |p|
  p.rubyforge_name = 'libnet-ffi'
  p.developer('Postmodern','postmodern.mod3@gmail.com')
  p.remote_rdoc_dir = ''
  p.extra_deps = [['ffi', '>=0.4.0']]
end

